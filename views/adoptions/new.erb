<h2>Create an adoption</h2>

<p class="back_button"><a href="/adoptions">Back</a></p>

<section class="details">


<form action="/adoptions" method="post">

  <label>
    <p class="adoption_form">
  Select a customer:
    <select name="customer_id">
      <% for customer in @customers %>
      <option value="<%= customer.id %>"><%= customer.name %>, <%= customer.address %></option>
      <% end %>
    </select>
  </label>


<label>
  Select an animal to adopt:
  <select name="animal_id">
    <% for animal in @available_animals %>
    <option value="<%= animal.id %>"><%= animal.name %>, <%= animal.type %>, <%= animal.breed %></option>
    <% end %>
  </select>
</label>
</p>


<input class="form_button" type="submit" value="Submit Adoption" />

</form>

</section>
