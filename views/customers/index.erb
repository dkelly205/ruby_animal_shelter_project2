<h2>Customers</h2>


<section class="search_bar">

<form action="/customers/name" method="GET">
    <label for="search">Search By Name:</label>
    <input class="search" type="search" name="name">
</form>
<p class="add_button"><a href="/customers/new">Add Customer</a></p>

</section>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Contact No</th>
    <th>Number of Animals Adopted</th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><a href='/customers/<%= customer.id %>'><%= customer.name %></a></td>
    <td><%= customer.address %></td>
    <td><%= customer.phone_number %></td>
    <td><%= customer.animals.count() %></td>
  </tr>
  <% end %>


</table>
