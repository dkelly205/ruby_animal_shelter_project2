<h3>Edit Customer</h3>

<form action="/customers/<%=@customer.id%>" method="post">

  <p>
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="<%=@customer.name%>" />
  </p>
  <p>
    <label for="address">Address:</label>
    <input type="text" name="address" id="address" value="<%=@customer.address%>" />
  </p>
  <p>
    <label for="phone_number">Phone Number:</label>
    <input type="phone_number" name="phone_number" id="phone_number" value="<%=@customer.phone_number%>" />
  </p>

  <input class="form_button" type="submit" value="Save" />

  <a class="button" href="/customers/<%= @customer.id %>">Cancel</a>

</form>
