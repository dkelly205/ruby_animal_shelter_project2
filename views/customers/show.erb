<p>Name: <%= @customer.name %></p>
<p>Address: <%= @customer.address %></p>
<p>Phone Number: <%= @customer.phone_number %></p>

<a class="button" href="/customers/<%= @customer.id %>/edit"><img class="button_image" src="/edit.png" alt="Edit"/></a>
<a class="button" href="/customers/<%= @customer.id %>/delete"><img class="button_image" src="/delete.png" alt="Delete"/></a>

<% if @customer.animals.count() > 0 %>

<% for animal in @customer.animals() %>

<p><a href='/animals/<%= animal.id %>'><%= animal.name %></a></p>
<img src='/<%= animal.image %>'/>

<% end %>
<% end %>

<a href="/customers">Back</a>
